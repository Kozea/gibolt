<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Gibolt</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}" type="text/css" media="screen" />
  </head>

  <body>
    <h1>Gibolt</h1>

    {% with messages = get_flashed_messages(with_categories=true) %}
      {% for category, message in messages %}
        <aside class="flash {{ category }}">
          {{ message }}
        </aside>
      {% endfor %}
    {% endwith %}

    <nav>
      <ul>
        <li><a href="{{ url_for('show_now', display='year') }}">Timeline</a></li>
        <li><a href="{{ url_for('show_sprint_issues') }}">Sprint issues</a></li>
        <li><a href="{{ url_for('refresh_all') }}">Refresh cache</a></li>
      </ul>
    </nav>

    <main>
      {% block main %}{% endblock main %}
    </main>

    <footer>
      <ul>
        <li><a href="http://community.kozea.org/">A Kozea Project</a></li>
      </ul>
    </footer>
  </body>
</html>
