{% extends '_layout.jinja2' %}

{% block title %}Milestone {{ milestone.repo_name }} - {{ super() }}{% endblock title %}

{% block content %}
  <h2>Suppression de la milestone {{ milestone.milestone_number }}</h2>

  <article>
    <h3>Voulez-vous réellement supprimer cette milestone ?</h3>
    <form method="post">
      <button name="cancel">Annuler</button>
      <button name="delete">Supprimer</button>
    </form>
  </article>
{% endblock content %}
